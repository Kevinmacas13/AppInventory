{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx", // ✅ necesario para .tsx
    "baseUrl": ".", // ✅ base para alias
    "paths": {
      "@/*": ["./*"] // ✅ alias @ funciona en todo el proyecto
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "babel.config.js",
    "nativewind-env.d.ts"
  ]
}
